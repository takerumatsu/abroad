<ul class="nav nav-tabs nav-justified">
  <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Likes <span class="badge"><%= @count_likes %></span><% end %></li>
  <li class="<%= 'active' if current_page?(microposts_user_path(@user)) %>"><%= link_to microposts_user_path(@user) do %>Microposts <span class="badge"><%= @count_microposts %></span><% end %></li>
</ul>

<div class="user-profile">
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, { size: 100 }) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
  <div class="status text-center">
    <div class="status-label">Like</div>
    <div id="like_count" class="status-value">
      <%= @count_like %>
    </div>
  </div>
</div>  

  

<% if @likes.present? %>
  <div class="row">
    <% @likes.each do |like| %>
      <div class="pull-left likes-photo">
        <% filename = like.spot.downcase + ".jpg" %>
        <a class="popup" href="<%= image_path filename %>"><%= image_tag filename, class:'photo', alt:like.spot %></a>
        <p class="title"><%= like.spot %></p>
        <div><%= render 'likes/like_button', spot: like.spot %></div>
      </div>
    <% end %>
  </div>
<% end %>



