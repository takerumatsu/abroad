<ul class="nav nav-tabs nav-justified">
  <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Likes <span class="badge"><%= @count_likes %></span><% end %></li>
  <li class="<%= 'active' if current_page?(microposts_user_path(@user)) %>"><%= link_to microposts_user_path(@user) do %>Microposts <span class="badge"><%= @count_microposts %></span><% end %></li>
</ul>


<% @microposts.each do |micropost| %>
  <% user = micropost.user %>
  <ul class="unstyled">
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        
        <!-- 写真追加 -->
        <div>
          <% if micropost.image %>
            <span class="micropost-image"><%= image_tag micropost.image %></span>
          <% end %>
        </div>
        
        <div>
          <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-delete' %>
          <% end %>
        </div>
      </div>
    </li>
  </ul>
<% end %>